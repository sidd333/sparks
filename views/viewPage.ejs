<body >
<%- include("partials/navbar.ejs") %>

<div class="container" style="padding-top: 69px;">
    <div class="row flex-nowrap ">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 theme__color position-fixed end-0 ">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2  min-vh-100 container_style">
                <p href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto  text-decoration-none">
                    <span class="fs-5 d-none d-sm-inline theme__color menu"><i class="fa-solid fa-square-caret-down"></i>  Menu</span>
                </p>
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start " id="menu">
                    <li class="nav-item">

                        <a href="/profile/<%=user[0]._id%>" class="nav-link align-middle px-0">

                             <button class="btn btn-lg btn-dark"><i class="fa-sharp fa-solid fa-address-card"></i><span class="ms-1 d-none d-sm-inline  my_profile">  My profile</span></button>
                        </a>
                    </li>
                   
                    <li class="logo_newsfeed">
                        <video autoplay loop muted playsinline src="/images/logo.mp4" class="brand_logo logo"></video>
                    </li>
                        
                       
                            
                       <li class="nav-item">
                        <form class="d-flex my-4" role="search" action="/newsfeed/search" method="POST">
                            <input class="form-control me-2 s_panel" type="search" name="name" placeholder="Search" aria-label="Search">
                            <button class="btn btn-success " type="submit">Search</button>
                          </form>
                       </li>
                       <li class="nav-item mt-4 log_btn">
                        <form action="/logout" method="post" class=" my-2">
                            <button class=" btn btn-danger " type="submit"><i class="fa-solid fa-right-from-bracket"></i><span class="log">  Logout</span></button>
                          </form>
                    </li>
                    
                            
                    
                   
            </div>
        </div>
      
    </div>
</div>
<% items.map((item,index)=>{ %>
    
<section id="prodetails" class="section-p1">
    <div class="single-pro-image">
        
        
    
           

            <div id="carouselExampleControls<%=index%>" class="carousel slide " data-bs-ride="carousel">
                <div class="carousel-inner view__item mx-auto">


                    
                    <%item.img.map((a)=>{ %>


    <div class="carousel-item active  ">
        
        <img src="data:image/<%=a.contentType%>;base64,<%=a.data.toString('base64')%>"
           class="img-fluid " >
           <hr class="w-100"/>
        
    </div>
    
    <button class="carousel-control-prev" type="button"
            data-bs-target="#carouselExampleControls<%=index%>" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button"
            data-bs-target="#carouselExampleControls<%=index%>" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
        

                    


                    <% })%>


                </div>
               
            </div>
            

            

            <div class="small-img-group">
                <%item.img.map((a)=>{ %>
                <div class="small-img-col m-2">
                    <img src="data:image/<%=a.contentType%>;base64,<%=a.data.toString('base64')%>"
                           class="img-fluid" >
                </div>
                <% }) %>
            </div>
    </div>
</div>  
<div class="single-pro-details">
    
    <h4>Item Name:<br/> <%=item.name%></h4>
    <hr class="w-50"/>
    <h2> Price:<br/> <%=item.price%></h2>
    <select>
        <option>Select Size</option>
        <option>XL</option>
        <option>XXL</option>
        <option>Small</option>
        <option>Large</option>
        <option>Medium</option>
    </select>
    
    <form action="/addToCart/<%=item._id%>" method="post">
        <button type="submit" class="btn btn-warning my-2">Add to Cart</button>
    </form>
    <hr class="w-50"/>
    <h4>Product Details</h4>
    <span><%=item.desc%>
    </span>
</div>
</section>
<% }) %>



  



