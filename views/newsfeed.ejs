<%- include("partials/head.ejs") %>
    <%- include("partials/navbar.ejs") %>

    <div class="container" style="padding-top: 69px;">
        <div class="row flex-nowrap ">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 theme__color position-fixed end-0 ">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2  min-vh-100">
                    <p href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto  text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline theme__color menu"><i class="fa-solid fa-square-caret-down"></i>  Menu</span>
                    </p>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a href="/profile/<%=user._id%>" class="nav-link align-middle px-0">
                                 <button class="btn btn-lg btn-dark"><i class="fa-sharp fa-solid fa-address-card"></i><span class="ms-1 d-none d-sm-inline  my_profile">  My profile</span></button>
                            </a>
                        </li>
                        <li class="logo_newsfeed">
                            <video autoplay loop muted playsinline src="images/logo.mp4" class="brand_logo logo"></video>
                        </li>
                        
                            
                           
                                
                           <li class="nav-item">
                            <form class="d-flex my-4" role="search" action="/newsfeed/search" method="POST">
                                <input class="form-control me-2 s_panel" type="search" name="name" placeholder="Search" aria-label="Search">
                                <button class="btn btn-success " type="submit">Search</button>
                              </form>
                           </li>
                           <li class="nav-item mt-4 log_btn">
                            <form action="/logout" method="post" class=" my-2">
                                <button class=" btn btn-danger " type="submit"><i class="fa-solid fa-right-from-bracket"></i><span class="log">  Logout</span></button>
                              </form>
                        </li>
                        
                                
                        
                       
                </div>
            </div>
          
        </div>
    </div>
    <div class="container-fluid" >
        <div class="row flex-nowrap ">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0  position-fixed">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2  theme__color mt-2 rounded">
                    
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto  text-decoration-none">
                            <span class="fs-5 d-none d-sm-inline theme__color">Following</span>
                        </a>
                        <%first5.map((user)=>{%>
                            <li class="nav-item">
                            <a href="/profile/<%=user._id%>" class="nav-link align-middle px-0">
                                <i class="fa-solid fa-user black"></i><span class="ms-1 d-none d-sm-inline theme__color">  <%=user.username%></span>
                            </a>
                        </li>
                       <% }) %>
                        
                    </ul>
                    
                </div>

                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2  my-2 theme__color rounded">
                    
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <a href="#" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto  text-decoration-none">

                            <span class="fs-5 d-none d-sm-inline theme__color">Notifications </span><i class="fa-solid black fa-bell px-2"></i> 

                           
                        </a>
                       
                            <li class="nav-item">
                            <a href="/profile/<%=user._id%>" class="nav-link align-middle px-0">
                                 <span class="ms-1 d-none d-sm-inline"><button disabled="disabled" class="btn btn-danger">2</button></span>
                            </a>
                        </li>
                       
                        
                    </ul>
                    
                </div>

                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2  my-2 theme__color rounded">
                    
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto  text-decoration-none">
                            <span class="fs-5 d-none d-sm-inline theme__color">Notes</span>
                        </a>
                       
                            <li class="nav-item">
                                <span class="text-muted" id="para1"> "The first step to go from thinking about doing something to doing it is writing it down"</span>
                                 <span class="ms-1 d-none d-sm-inline theme__color" id = "para2" ></span>
                            
                        </li>
                       
                        
                    </ul>
                    
                </div>

                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2  my-2 theme__color rounded">
                    
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <a href="#" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto  text-decoration-none">
                            <span class="fs-5 d-none d-sm-inline theme__color">What's on your mind? </span><i class="fa-solid fa-pen px-2 black"></i> 
                           
                        </a>
                       
                            <li class="nav-item">
                            <textarea class="rounded bg-secondary text-white" id = "inp"></textarea>
                            <button id = "btn" onclick = "changeImage()" class="btn btn-dark mb-1 "><i class="fa-sharp fa-solid fa-plus"></i><span>  Add</span></button>
                        </li>
                       
                        
                    </ul>
                    
                </div>
            </div>
          
            
        </div>
    </div>

        <div class="col py-3">
            <div class="container py-5 w-50 h-25">
                <div class="row mx-auto ">
                    <% items.map((image)=>{ %>
    
                        <div class="card col-12 mx-auto my-4 border-0">
    
                            <div class="card-header" style="height:10 rem">
                                <img src="data:image/<%=image.userId.img.contentType%>;base64,<%=image.userId.img.data.toString('base64')%>"
                                     style="border-radius: 100%; width: 9rem; height:9rem">
                                <form action="/profile/<%=image.userId._id %>" method="get" class="d-inline">
                                    <button class="btn shadow-none" type="submit">
                                        <%=image.userId.username %>
                                    </button>
                                    <p class="text-muted m-2">
                                        <%= image.createdAt?image.createdAt.toDateString():"aug 12"%>
                                    </p>
                                </form>
                            </div>
    
    
                            <div class="card-body">
                                <img src="data:image/<%=image.img.contentType%>;base64,<%=image.img.data.toString('base64')%>"
                                    class="img-fluid w-100 ">
    
    
    
    <hr>
                                <p>
                                    <%= image.desc %>
                                </p>
                                <p class="w-25 d-inline">
                                    <%= image.likes %>
                                </p>
                                
                                
    
    
                                
                                <form action="/like/<%=image._id %>" method="post" class="d-inline">
    
                                    <button type="submit" class="border-0 bg-transparent"><i class="fa-solid fa-splotch"></i></button>
    
                                </form>
                                <i class="fa-solid fa-sparkles"></i>
    
    
    
                            </div>
    
                        </div>
                        <% }) %>
                </div>
    
            </div>
        </div>
        <script>
            const para1 = document.getElementById("para1");
            const para2 = document.getElementById("para2");
            function changeImage() {
                console.log("click");
               let inp = document.getElementById("inp");
               let enteredText = inp.value;
                para1.innerHTML = "";
               para2.innerHTML +="" +enteredText+ "  <br/>" +"&nbsp;" ;
            }
         </script>
        <%- include("partials/footer.ejs") %>